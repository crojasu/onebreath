<!--  START OF NEW CODE - TIMER SHOW -->
<div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="title-box">
        <h1 class="h1title"><%= @timer_session.preset.name %></h1>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
         <p class="pbold">Stay focused</p>
      </div>
    </div>
  </div>

  <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">
    <div class="middle-content">
      <div id="timer2" class="timerfont" data-limit="<%= @timer_session.preset.focus_timer %>" data-sessionid="<%= @timer_session.id %>" data-day="<%= @timer_session.preset.focus_timer %>">
            <%= @timer_session.preset.duration(:focus_timer) %>
      </div>

    </div>
  </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="action-buttons-box">
        <%= link_to start_timer_session_path(@timer_session), method: :patch, remote: true do %>
        <i class="far fa-play-circle fa-3x whiteicon"></i>
        <% end %>

          <%= link_to new_timer_session_break_path(@timer_session) do  %>
          <i class="far fa-stop-circle fa-3x whiteicon"></i>
        <% end %>
        </div>
        <div class="action-buttons-box">
        <%= link_to "Exit", presets_path, :class=> "btn obbtn rexit" %>
         </div>
        <div class="action-buttons-box">
        <%= link_to "Session stats", stats_path(@timer_session), :class=> "btn obbtn rexit plight" %>
         </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bottom-blank">
    </div>
  </div>
</div>

<%= javascript_pack_tag 'easytimer' %>


